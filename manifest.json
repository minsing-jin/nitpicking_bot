{
  "manifest_version": 3,
  "name": "Critical Thinking Bot",
  "version": "1.0",
  "description": "LLM 답변에 대해 비판적 사고를 유도하는 Chrome Extension",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://bard.google.com/*",
    "https://gemini.google.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Critical Thinking Bot",
    "default_icon": {
      "16": "icons/gang16.png",
      "48": "icons/gang48.png",
      "128": "icons/gang128.png"
    }
  },
  "icons": {
    "16": "icons/gang16.png",
    "48": "icons/gang48.png",
    "128": "icons/gang128.png"
  }
}
